<h1> <%= @category.name %> </h1>
<%= image_tag(@category.image, alt:'No image', width: 200) %>
<h2>The category colour is: <%= @category.colour %></h2>
<h3>The recipes in this category are:-</h3>

<% @category.recipes.each do |recipe| %>
  <h3><%= recipe.name %></h3>
  <%= image_tag(recipe.image, alt:'No image', width: 200) %>
  <h4><%= recipe.description %></h4>
  <%= link_to("| Click for more detail on #{recipe.name} |", recipe_path(recipe)) %><br><br>
<% end %>
<%= button_to('Edit category', edit_category_path(@category), method: :get) %>
<%= button_to('Delete category', category_path(@category), method: :delete, data: {confirm: 'Delete this category? Are you sure?!'}) %>